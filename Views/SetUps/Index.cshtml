@model IEnumerable<Bearer.Models.SetupVM>

@{
    ViewBag.Title = "Startup Values";
}

<h2>Your Startup Setup Values</h2>

<div class="container ">
    <div class="row">
        <div class="col-lg-1">
            
        </div>
    </div>
</div>
<p>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

</p>

<table class="table table-bordered  table-hover table-responsive table-striped" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Type)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        @*<th>
            App Value
        </th>*@
        <th>
            @*@Html.ActionLink("Create New", "Create")*@
            @Html.ActionLink("Reset", "Reset")
            
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ApplicationValue)
        </td>*@
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
             |
            @*@Html.ActionLink("Reset", "Delete", new { id=item.Id })
            |*@
            @Html.ActionLink("Reset", "ResetField", new { id = item.Id })
        </td>
    </tr>
}

</table>
